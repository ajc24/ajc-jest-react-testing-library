    "test-unit-coverage": "npm run test-unit -- --collectCoverage"
  },
  "dependencies": {
    "@testing-library/react": "^13.0.0",
    "jest": "^27.5.1",
    "jsdom": "^19.0.0",
    "jsdom-global": "^3.0.2",
    "react-test-renderer": "^18.0.0"
